        <Views:NewProductCreationDialogView x:Name="createProductDialog"
                                            BackgroundColor="Black" 
                                            IsVisible="{Binding IsCreatingAProduct}" 
                                            SaveCommand="{Binding SaveNewProductCommand}"
                                            DefaultProductName="{Binding DefaultProductName}"
                                            ZIndex="100"/>
        
        <Grid x:Name="productDeletionConfirmDialogWrapper" IsVisible="{Binding IsDeletingAProduct}">
            <Button BackgroundColor="White"
                    Opacity=".5"
                    Command="{Binding CancelDeletionDialogCommand}"/>

            <Border StrokeShape="RoundRectangle 25"
                    StrokeThickness="3"
                    Stroke="White"
                    HorizontalOptions="Center" 
                    VerticalOptions="Center"
                    Padding="25"
                    Background="Black">

                <VerticalStackLayout Spacing="15">
                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <FormattedString.Spans>
                                    <Span Text="Are you sure you want to delete: " FontSize="Subtitle"/>
                                    <Span Text="{x:Static system:Environment.NewLine}"/>
                                    <Span Text="{Binding Name}" FontSize="Title"/>
                                </FormattedString.Spans>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <HorizontalStackLayout HorizontalOptions="End" Spacing="7" Margin="5">
                        <Button Text="No"
                                BackgroundColor="CadetBlue" 
                                TextColor="White"
                                BorderColor="White"
                                BorderWidth="1"
                                WidthRequest="60"
                                Command="{Binding CancelDeletionDialogCommand}" />

                        <Button Text="Yes"
                                BackgroundColor="CadetBlue" 
                                TextColor="White"
                                BorderColor="White"
                                BorderWidth="1"
                                WidthRequest="60"
                                Command="{Binding ConfirmDeleteDialogCommand}" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
        </Grid>
    </Grid>
