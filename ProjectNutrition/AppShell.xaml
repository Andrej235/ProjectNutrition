<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjectNutrition.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProjectNutrition.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="ProjectNutrition">

    <TabBar>
        <Tab Icon="ingredients.png"
             Title="Products">
            
            <ShellContent ContentTemplate="{DataTemplate local:ProductsPage}"/>
        </Tab>

        <Tab Icon="meal.png"
             Title="Meals">
            
            <ShellContent ContentTemplate="{DataTemplate local:MealsPage}"/>
        </Tab>

        <Tab Icon="goal.png"
             Title="Goal">

            <ShellContent ContentTemplate="{DataTemplate local:DailyGoalPage}"/>
        </Tab>
    </TabBar>

</Shell>
